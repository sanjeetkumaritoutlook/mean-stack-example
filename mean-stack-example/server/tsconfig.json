{
   "compilerOptions": {
       "module": "commonjs",
        "lib": ["esnext"],
       "esModuleInterop": true,
       "target": "es6",
       "noImplicitAny": true,
       "skipLibCheck": true,
       "moduleResolution": "node",
       "sourceMap": true,
       "outDir": "dist",
       "baseUrl": ".",
       "allowJs": true,
       "paths": {
           "*": ["node_modules/*"]
       }
   },
   "include": ["src/**/*"]
  }